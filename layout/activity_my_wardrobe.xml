<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/mw_return"
            android:clickable="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="23dp"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/goback_2"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/shirt_1"
                android:layout_marginTop="4dp"
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:src="@drawable/shirt"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/shirt_2"
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:text="上"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/shirt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="衣"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:src="@drawable/jacket"
                android:scaleType="fitXY"
                android:id="@+id/jacket_1"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:text="外"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/jacket_2"/>
            <TextView
                android:id="@+id/jacket_3"
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:textColor="@color/colorAccent"
                android:text="套"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="23dp"
                android:layout_height="16dp"
                android:src="@drawable/shorts"
                android:scaleType="fitXY"
                android:id="@+id/shorts_1"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:text="裤"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/shorts_2"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:textColor="@color/colorAccent"
                android:text="子"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/shorts_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/dress"
                android:scaleType="fitXY"
                android:id="@+id/dress_1"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:text="裙"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/dress_2"/>
            <TextView
                android:id="@+id/dress_3"
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:textColor="@color/colorAccent"
                android:text="子"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/shoe"
                android:scaleType="fitXY"
                android:id="@+id/shoe_1"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:text="鞋"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"
                android:id="@+id/shoe_2"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:textColor="@color/colorAccent"
                android:text="子"
                android:typeface="serif"
                android:textSize="14sp"
                android:id="@+id/shoe_3"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="75dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_weight="0.04"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:id="@+id/others_1"
                android:src="@drawable/down_jacket"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:textColor="@color/colorAccent"
                android:id="@+id/others_2"
                android:text="其"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/others_3"
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:textColor="@color/colorAccent"
                android:text="它"
                android:typeface="serif"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_marginBottom="65dp"
        android:background="#80FFFFFF"
        android:layout_width="287dp"
        android:layout_height="588dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.63">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="268dp"
            android:background="@color/colorWhite"
            android:layout_height="472dp"
            android:weightSum="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="138dp"
                android:layout_height="72dp"
                android:src="@drawable/my_wardrobe_label"
                android:id="@+id/labelGet"
                android:scaleType="fitXY"
                android:layout_weight="0.03" />
            <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/nothing"
            android:layout_weight="0.96"
            android:id="@+id/cloth"/>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="0.08">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/down"
                    android:id="@+id/bt_previous"
                    android:scaleType="fitXY"
                    android:layout_marginRight="15dp"/>
                <ImageView
                    android:id="@+id/bt_next"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/up"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.47"
            android:gravity="center">
            <Button
                android:id="@+id/button_add"
                android:layout_marginTop="12dp"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:layout_marginRight="25dp"
                android:typeface="serif"
                android:gravity="center"
                android:text="增加"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button2"
                />
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:typeface="serif"
                android:gravity="center"
                android:id="@+id/button_delete"
                android:text="删除"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button2"/>
        </LinearLayout>

</LinearLayout>

</LinearLayout>