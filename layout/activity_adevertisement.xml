<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/return_ad"
            android:layout_marginLeft="10dp"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:src="@drawable/goback"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/colorBlack"
            android:text="卫衣穿搭指南"
            android:textSize="25sp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="355dp"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:src="@drawable/advice_1"
        android:layout_weight="5.97" />
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.69">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/brownie"/>
            <TextView
                android:id="@+id/ad_title_1"
                android:textColor="@color/colorBlack"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:maxLines="1"
                android:text="#8款春季卫衣穿搭指南#\n第三弹脱颖而出就这样搭配"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ad_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:maxLines="1"
                android:text="第三弹脱颖而出就这样搭配"/>
            <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pineapple"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/ad_introduction_1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:text="//现在天气暖和起来了，穿卫衣的人越来越多，卫衣搭配怎样才能在人群中脱颖而出(⊙_⊙)?"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ad_introduction_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:text="小板凳请做好~小编教你如何卫衣穿搭进阶法"/>
            <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/strawberry"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/candy"/>
        <TextView
            android:id="@+id/ad_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorBlack"
            android:text="搭配TOP1：卫衣+半身裙"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/brownie_2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ad_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ad_content_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:baselineAligned="true"
        android:gravity="center">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/information"
            android:id="@+id/comment"/>
        <EditText
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="260dp"
            android:layout_height="34dp"
            android:background="@drawable/input_box"/>
        <ImageView
            android:clickable="true"
            android:id="@+id/ad_praise"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/good"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>