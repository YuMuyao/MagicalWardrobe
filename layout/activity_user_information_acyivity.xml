<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ui_return"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/goback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:typeface="serif"
            android:text="个人信息"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:layout_marginBottom="30dp">
        <com.fanxiaoyudemo.magicalwardrobe.UserInformation.HeadPortrait
            android:id="@+id/avater"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/head_portrait"
            android:src="@drawable/pekachu"/>
        <TextView
            android:layout_gravity="center"
            android:typeface="serif"
            android:maxLines="1"
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啦啦啦开心的大帅"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="50dp"
            android:text="账户"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/phoneNum"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@drawable/output_box"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/item_2"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="50dp"
            android:text="性别"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@drawable/output_box"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/item_3"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="50dp"
            android:text="风格"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/style"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:background="@drawable/output_box"
            />
    </LinearLayout>
    <Button
        android:id="@+id/edit"
        android:layout_marginLeft="60dp"
        android:layout_width="160dp"
        android:gravity="center"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:textSize="20dp"
        android:text="修改信息"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"/>
</LinearLayout>
