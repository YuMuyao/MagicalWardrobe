<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="35dp">
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改信息"
            android:textSize="38sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="账户"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="12dp"/>

            <EditText
                android:id="@+id/phoneNum"
                android:hint="请输入您的手机号"
                android:layout_width="243dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_weight="0.61" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="修改头像"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="22dp"/>

            <Button
                android:id="@+id/avater"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:text="点击上传头像"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:background="@drawable/button2"
                android:layout_weight="0.61" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="密码"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="12dp"/>

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="243dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="10dp"
                android:layout_weight="1.68" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="确认密码"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="12dp"/>

            <EditText
                android:id="@+id/passwordCheck"
                android:inputType="textPassword"
                android:layout_width="243dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="10dp"
                android:layout_weight="1.68" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="昵称"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="12dp"/>

            <EditText
                android:id="@+id/userName"
                android:layout_width="243dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="10dp"
                android:layout_weight="1.68" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorGray"
                android:text="性别" android:gravity="center_vertical"/>
            <RadioGroup
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="0.47" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="女"
                    android:textColor="@color/colorAccent"/>
            </RadioGroup>
        </LinearLayout>>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="密保问题"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/requestion"
                android:layout_width="237dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="16dp"
                android:text="密保答案"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/answer"
                android:layout_width="237dp"
                android:layout_height="42dp"
                android:background="@drawable/input_box"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格选择"
                android:layout_marginLeft="25dp"
                android:textSize="16dp"
                android:textColor="@color/colorGray"/>
            <ImageView
                android:layout_marginLeft="135dp"
                android:layout_width="89dp"
                android:layout_height="44dp"
                android:scaleType="fitXY"
                android:src="@drawable/style_choose"
                android:layout_weight="0.32" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <CheckBox
                android:id="@+id/style_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="嘻哈"/>
            <CheckBox
                android:id="@+id/style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院"
                android:layout_marginLeft="140dp"/>
            <CheckBox
                android:id="@+id/style_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="淑女"
                android:layout_marginLeft="245dp"/>
            <CheckBox
                android:id="@+id/style_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="田园"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="35dp"/>
            <CheckBox
                android:id="@+id/style_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧美"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="35dp"/>
            <CheckBox
                android:id="@+id/style_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日韩"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="35dp"/>
            <CheckBox
                android:id="@+id/style_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国潮"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="70dp"/>
            <CheckBox
                android:id="@+id/style_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="萝莉"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"/>
            <CheckBox
                android:id="@+id/style_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简约"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="70dp"/>
            <CheckBox
                android:id="@+id/style_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休闲"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="105dp"/>
            <CheckBox
                android:id="@+id/style_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="街头"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="105dp"/>
            <CheckBox
                android:id="@+id/style_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="105dp"/>
            <CheckBox
                android:id="@+id/style_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="古风"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="140dp"/>
            <CheckBox
                android:id="@+id/style_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成熟"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="140dp"/>
        </RelativeLayout>
        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/edit_check"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="55dp"
            android:layout_width="252dp"
            android:layout_height="29dp"
            android:background="@drawable/button"
            android:text="信息确认"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="0.01" />
        <Button
            android:id="@+id/edit_finish"
            android:layout_marginLeft="85dp"
            android:layout_marginBottom="40dp"
            android:layout_width="252dp"
            android:layout_height="29dp"
            android:background="@drawable/button"
            android:text="完成修改"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="0.01" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <ImageView
                android:layout_width="247dp"
                android:layout_height="83dp"
                android:scaleType="fitXY"
                android:src="@drawable/ball"
                android:layout_marginLeft="22dp" />
            <ImageView
                android:layout_width="89dp"
                android:layout_height="101dp"
                android:scaleType="fitXY"
                android:src="@drawable/cake"
                android:layout_weight="0.33" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="0dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>
</ScrollView>