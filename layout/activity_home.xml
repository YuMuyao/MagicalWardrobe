<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <!--<android.support.v7.widget.SearchView-->
        <!--android:id="@+id/sv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="25dp"-->
        <!--android:queryHint="请输入查找内容"-->
        <!--android:background="@color/colorAccent"-->
        <!--android:layout_weight="0.04"-->
        <!--android:visibility="visible">-->
    <!--</android.support.v7.widget.SearchView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:weightSum="1">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="31dp"
            android:src="@drawable/search"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_marginTop="12dp"
            android:layout_width="242dp"
            android:layout_height="32dp"
            android:background="@drawable/input_box_2"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/view_switch"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:src="@drawable/eye"
            android:layout_weight="0.20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:weightSum="1"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.02">

        <ImageView
            android:id="@+id/virtual_fit"
            android:layout_width="53dp"
            android:layout_height="63dp"
            android:src="@drawable/cloth_home"
            android:scaleType="fitXY"
            android:layout_weight="0.23"
            android:layout_marginRight="22dp"/>

        <ImageView
            android:id="@+id/weather_forecast"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:src="@drawable/sun"
            android:scaleType="fitXY"
            android:layout_marginRight="22dp"/>

        <ImageView
            android:id="@+id/community"
            android:layout_width="73dp"
            android:layout_height="65dp"
            android:src="@drawable/house"
            android:scaleType="fitXY"
            android:layout_marginRight="26dp"/>

        <ImageView
            android:id="@+id/my_wardrobe"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            android:layout_weight="0.09" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:layout_marginTop="2dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:text="虚拟试衣"
            android:layout_marginRight="45dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:text="天气预报"
            android:layout_marginRight="42dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:text="朋友社区"
            android:layout_marginRight="45dp"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:text="我的衣橱"
            android:clickable="true"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/viewpager_ad"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:id="@+id/circle_indicater"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="170dp"
            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="282dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="12dp"
            android:id="@+id/home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorAccent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:src="@drawable/information"/>
        <ImageView
            android:id="@+id/my_collection"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:src="@drawable/love"/>
        <ImageView
            android:id="@+id/user_information"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:src="@drawable/user"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>